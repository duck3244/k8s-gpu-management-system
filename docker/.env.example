# K8s GPU Management System Environment Variables

# Application Settings
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# Database Configuration
ORACLE_PASSWORD=OraclePassword123
ORACLE_DATABASE=XE
DB_HOST=oracle-db
DB_PORT=1521
DB_SERVICE_NAME=XE

# Application Database User
SPRING_DATASOURCE_URL=jdbc:oracle:thin:@oracle-db:1521:XE
SPRING_DATASOURCE_USERNAME=gpu_admin
SPRING_DATASOURCE_PASSWORD=gpu_password

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Application Performance Tuning
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30

# Batch Job Configuration
BATCH_METRICS_COLLECTION_INTERVAL=60000
BATCH_CHUNK_SIZE=100
BATCH_THREAD_POOL_SIZE=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Network Configuration
NETWORK_NAME=k8s-gpu-network

# Volume Configuration
ORACLE_DATA_VOLUME=oracle_data
PROMETHEUS_DATA_VOLUME=prometheus_data
GRAFANA_DATA_VOLUME=grafana_data
APP_LOGS_VOLUME=app_logs